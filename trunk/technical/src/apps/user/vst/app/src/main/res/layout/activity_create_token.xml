<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.opensoach.vst.Views.Activity.CreateTokenActivity"
    android:background="@color/colorPrimary">

    <data>
        <import type="android.view.View"/>
        <data>
            <import type="java.lang.Integer" />
        </data>
        <variable
            name="VM"
            type="com.opensoach.vst.ViewModels.CreateTokenViewModel" />


        <variable
            name="ClickHandler"
            type="com.opensoach.vst.Views.ClickHandler.JobServiceTokenCreationHandler" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/header_view_bg">

        <!--Replacing this element with actual fragment from code behind-->
        <FrameLayout
            android:id="@+id/headerPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark">

        </FrameLayout>
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/headerView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="1dp"
                    card_view:cardCornerRadius="2dp"
                    android:visibility="@{VM.isGenerateTokenVisible == true ? View.VISIBLE : View.GONE}">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37sp"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Generate Token"
                            android:textSize="@dimen/card_header_font_size"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Vehicle Number "/>

                            <EditText
                                android:id="@+id/vehicalNo1"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:hint="MH"
                                android:textAlignment="center"
                                android:inputType="textCapWords"
                                android:maxLength="2"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:text="@={VM.vehicleNo1}"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:text="-"/>

                            <EditText
                                android:id="@+id/vehicalNo2"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:hint="12"
                                android:textAlignment="center"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:maxLength="2"
                                android:text="@={VM.vehicleNo2}"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:text="-"/>

                            <EditText
                                android:id="@+id/vehicalNo3"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:hint="AB"
                                android:textAlignment="center"
                                android:inputType="textCapWords"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:maxLength="2"
                                android:text="@={VM.vehicleNo3}"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:text="-"/>

                            <EditText
                                android:id="@+id/vehicalNo4"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:hint="1234"
                                android:textAlignment="center"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:maxLength="4"
                                android:text="@={VM.vehicleNo4}"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Generate"
                            android:onClick="@{(view) -> ClickHandler.onClick(view,VM)}"/>

                        </LinearLayout>

                    </LinearLayout>

                    </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="1dp"
                    card_view:cardCornerRadius="2dp"
                    android:visibility="@{VM.isGenerateTokenVisible == false ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="37sp"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:textAlignment="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Token Details"
                                android:textSize="@dimen/card_header_font_size"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5sp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5sp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:id="@+id/imgNWState"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="0dp"
                                        android:layout_marginRight="10sp"
                                        android:background="@drawable/ic_cards"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:text="@{VM.generatedToken}"/>
                                    <!--<TextView-->
                                        <!--android:layout_width="match_parent"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:textStyle="bold"-->
                                        <!--android:text="VM.getGeneratedToken"/>-->
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5sp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="0dp"
                                        android:layout_marginRight="10sp"
                                        android:background="@drawable/ic_car_estate"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:text="@{VM.getNewVehicleNumber}"/>

                                    <!--<TextView-->
                                        <!--android:layout_width="match_parent"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:textStyle="bold"-->
                                        <!--android:text="VM.getNewVehicleNumber"/>-->
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5sp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="0dp"
                                        android:layout_marginRight="10sp"
                                        android:background="@drawable/ic_clock"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:text="@{VM.getGeneratedOn}"/>

                                    <!--<TextView-->
                                        <!--android:layout_width="match_parent"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:textStyle="bold"-->
                                        <!--android:text="VM.getGeneratedOn"/>-->
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:onClick="@{(view)-> ClickHandler.onTokenCreateCompleted(view,VM)}"
                                    android:text="DONE"/>

                                <!--<Button-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:onClick="@{(view)-> ClickHandler.onShowCreateToken(view,VM)}"-->
                                    <!--android:text="Create New"/>-->

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>




                </android.support.v7.widget.CardView>

            </LinearLayout>






        </RelativeLayout>

    </RelativeLayout>

</layout>
