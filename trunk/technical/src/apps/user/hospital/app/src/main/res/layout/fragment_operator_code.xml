<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="VM"
            type="com.opensoach.hospital.ViewModels.OperatorCodeViewModel" />
        <variable
            name="clickHandler"
            type="com.opensoach.hospital.Views.ClickHandler.OperatorCodeInputClickHandler" />
        <variable
            name="UIViewActionRequest"
            type="com.opensoach.hospital.Model.View.UIViewActionRequestModel"/>
    </data>

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_main_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <EditText
            android:id="@+id/etOperatorCode"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/grid_data_text_size"
            android:textStyle="normal"
            android:inputType="number"
            android:hint="Please enter operator code"
            android:text="@={VM.operatorCode}"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etOperatorCode"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/selector_radio_button_color"
            android:button="@null"
            android:onClick="@{(view) -> clickHandler.onOperatorCodeSubmitClick(view,VM,UIViewActionRequest)}"
            android:paddingBottom="@dimen/radio_button_vertical_padding"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="@dimen/radio_button_vertical_padding"
            android:text="Submit"
            android:textColor="@drawable/selector_radio_button_text_color"
            android:textSize="@dimen/radio_button_text_size" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etOperatorCode"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/btnSubmit"
            android:background="@drawable/selector_radio_button_color"
            android:button="@null"
            android:text="Cancel"
            android:textColor="@drawable/selector_radio_button_text_color"
            android:textSize="@dimen/radio_button_text_size"
            android:onClick="@{(view) -> clickHandler.onCancel(view,VM,UIViewActionRequest)}"/>

    </RelativeLayout>


</layout>
