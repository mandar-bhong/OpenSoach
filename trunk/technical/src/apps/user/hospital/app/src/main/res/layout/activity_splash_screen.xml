<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.opensoach.hospital.Views.Activity.SplashScreenActivity"
    android:background="@drawable/splash_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/splash_screen_progress_bar"
            android:layout_alignEnd="@+id/splash_screen_progress_bar"
            android:layout_alignRight="@+id/splash_screen_progress_bar"
            android:layout_marginBottom="49dp"
            android:src="@drawable/sp_ani" />

        <ProgressBar
            android:id="@+id/splash_screen_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
