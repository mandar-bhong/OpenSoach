<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="DataContext"
            type="com.opensoach.hospital.ViewModels.JobGridViewModel" />

        <variable
            name="ControlContext"
            type="com.opensoach.hospital.Views.Fragment.JobBriefList" />
        <!--<variable-->
        <!--name="JobBriefList"-->
        <!--type="com.opensoach.sme.ViewModels.JobBriefListViewModel" />-->
        <!--<variable-->
        <!--name="jobBriefListAdaptor"-->
        <!--type="com.opensoach.sme.Views.Miscellaneous.JobBriefViewAdaptor" />-->
    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.opensoach.hospital.Views.Fragment.JobBriefList">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_main_bg"
            android:padding="0dp">

            <com.opensoach.hospital.Views.Fragment.JobGridView
                android:id="@+id/job_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/grid_padding"
                android:background="@color/color_main_bg"
                android:horizontalSpacing="@dimen/grid_horizontal_spacing"
                android:numColumns="1"
                android:padding="7dp"
                android:verticalSpacing="@dimen/grid_vertical_spacing"
                bind:DataContext="@{DataContext}"></com.opensoach.hospital.Views.Fragment.JobGridView>
        </RelativeLayout>
    </FrameLayout>

</layout>
