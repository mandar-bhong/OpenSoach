                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.opensoach.hospital.Views.Activity.JobBoardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opensoach.hospital.Views.Activity.SendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opensoach.hospital.Views.Activity.SplashScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opensoach.hospital.Views.Activity.MainActivity"
