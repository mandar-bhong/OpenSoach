<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="DataContext"
            type="com.opensoach.hpft.ViewModels.CardGridViewModel" />

        <!--<variable-->
            <!--name="ControlContext"-->
            <!--type="com.opensoach.hpft.Views.Fragment.CardBriefFragment" />-->

    </data>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
            <include layout="@layout/fragment_header"
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentTop="true"/>

            <RelativeLayout
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/color_main_bg"
                android:padding="0dp"
                android:layout_below="@+id/headerView"
                android:layout_above="@+id/footerView">

                <com.opensoach.hpft.Views.Fragment.CardGridView
                    android:id="@+id/job_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/grid_padding"
                    android:background="@android:drawable/screen_background_dark_transparent"
                    android:horizontalSpacing="@dimen/grid_horizontal_spacing"
                    android:numColumns="1"
                    android:padding="7dp"
                    android:verticalSpacing="@dimen/grid_vertical_spacing"
                    bind:DataContext="@{DataContext}"   ></com.opensoach.hpft.Views.Fragment.CardGridView>

            </RelativeLayout>

            <include layout="@layout/fragment_footer"
                android:id="@+id/footerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</layout>