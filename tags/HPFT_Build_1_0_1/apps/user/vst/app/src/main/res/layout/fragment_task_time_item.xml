<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Views.Fragment.TaskTimeItemFragment">

    <data>
        <variable
            name="VM"
            type="com.opensoach.vst.ViewModels.TaskTimeItemViewModel"/>

        <variable
            name="ClickHandler"
            type="com.opensoach.vst.Views.ClickHandler.TaskTimeClickHandler"/>

    </data>

    <LinearLayout
        android:layout_width="@dimen/chart_cellview_width"
        android:layout_height="@dimen/chart_cellview_height"
        android:onClick="@{(view) -> ClickHandler.onClick(view,VM)}"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            card_view:cardBackgroundColor="@{VM.isSelectedTime ? @color/color_chart_bg_for_border : @android:color/white}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/entryTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_text_time_slot"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@{VM.displayText}"/>

            <!--<EditText-->
                <!--android:layout_toEndOf="@id/entryTime"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:focusableInTouchMode="false"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@{VM.activeSelected ? @color/colorAccent:@android:color/white}"
                android:layout_alignParentBottom="true">

            </LinearLayout>
        </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:background="@{VM.activeSelected ? @color/colorAccent:@android:color/white}">-->
        <!--</LinearLayout>-->

    </LinearLayout>



</layout>