<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100"
    tools:context="spl.hkt.opensoach.splapp.view.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_weight="10"
            android:background="@color/header_view_bg"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <!-- <EditText
                 android:id="@+id/tempEditText"
                 android:layout_width="30dp"
                 android:layout_height="30dp" />-->

            <TextView
                android:id="@+id/servicePointTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/servicepoint_live"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- <Spinner
                 android:id="@+id/locationSpinner"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="10dp"
                 android:layout_toLeftOf="@+id/imgNWState"
                 android:minHeight="15dp"
                 android:minWidth="150dp"
                 android:visibility="gone" />-->

            <ImageView
                android:id="@+id/imgNWState2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgNWState1"
                android:background="@drawable/online" />

            <ImageView
                android:id="@+id/imgNWState1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgNWState"
                android:background="@drawable/offline" />

            <ImageView
                android:id="@+id/imgNWState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgCommentView"
                android:background="@drawable/online" />

            <ImageView
                android:id="@+id/imgCommentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/uploadData"
                android:src="@drawable/send" />

            <ImageButton
                android:id="@+id/uploadData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/uploadData1"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_button_upload_icon" />

            <ImageButton
                android:id="@+id/uploadData1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/menu"
                android:background="@drawable/selector_button_upload_color"
                android:src="@drawable/selector_button_upload_icon" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_weight="10"
            android:background="@color/header_view_bg"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <!-- <EditText
                 android:id="@+id/tempEditText"
                 android:layout_width="30dp"
                 android:layout_height="30dp" />


            <ImageView
                android:id="@+id/imgNWState11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgNWState12"
                android:background="@drawable/environment_errror" />

            <ImageView
                android:id="@+id/imgNWState12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgNWState13"
                android:background="@drawable/environment_ok" />-->

            <ImageView
                android:id="@+id/imgNWState13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgNWState14"
                android:background="@drawable/online" />

            <ImageView
                android:id="@+id/imgNWState14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/imgNWState15"
                android:src="@drawable/offline" />

            <ImageView
                android:id="@+id/imgNWState15"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/offline" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Server IP Address"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etIpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Server IP Address" />

            <Button
                android:layout_width="@dimen/chart_cellview_width"
                android:layout_height="@dimen/chart_cellview_height"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:onClick="doSubmit"
                android:padding="5dp"
                android:text="Submit" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:onClick="showData"
                android:padding="5dp"
                android:text="Show Data" />

            <TextView
                android:id="@+id/testString"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>