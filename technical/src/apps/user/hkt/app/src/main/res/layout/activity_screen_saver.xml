<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen_saver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:clickable="true"
    tools:context="spl.hkt.opensoach.splapp.view.ScreenSaverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:paddingBottom="50dp"
        android:text="How do you feel about cleanness of this room?" />

   <!-- <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></WebView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCloseMeClicked"
        android:text="Close Me" />-->


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp"
            android:orientation="vertical" >
            <ImageButton
                android:id="@+id/good_btn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:src="@drawable/selector_feedback_good"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="GOOD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="50dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/ok_btn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:src="@drawable/selector_feedback_ok"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="OK" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/bad_btn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:padding="20dp"
                android:src="@drawable/selector_feedback_bad"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="BAD" />

        </LinearLayout>

    </TableRow>

</LinearLayout>
