<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activity.NetworkSettings">

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_main_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <EditText
            android:id="@+id/etIPAddress"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/textview_border"
            android:gravity="top"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/grid_data_text_size"
            android:textStyle="normal"
            android:hint="Please enter IPAddress or Host name"
            android:text="servicepoint.live"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etIPAddress"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/selector_radio_button_color"
            android:button="@null"
            android:paddingBottom="@dimen/radio_button_vertical_padding"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="@dimen/radio_button_vertical_padding"
            android:text="Continue"
            android:textColor="@drawable/selector_radio_button_text_color"
            android:textSize="@dimen/radio_button_text_size" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>